{
  "name": "jobber-auth",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/jobber-auth/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["generate-types"],
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"],
        "cwd": "apps/jobber-auth"
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development"]
        }
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/apps/jobber-auth/package.json",
        "{workspaceRoot}/dist/apps/jobber-auth/package-lock.json"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["{workspaceRoot}/dist/apps/jobber-auth/workspace_modules"],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": ["prune-lockfile", "copy-workspace-modules"],
      "executor": "nx:noop"
    },
    "serve": {
      "executor": "nx:run-commands",
      "dependsOn": ["build:development"],
      "options": {
        "commands": [
          {
            "command": "webpack-cli build --node-env=development --watch",
            "forwardAllArgs": false,
            "prefix": "webpack"
          },
          {
            "command": "node --enable-source-maps --watch ../../dist/apps/jobber-auth/main.js",
            "forwardAllArgs": false,
            "prefix": "nestjs"
          }
        ],
        "parallel": true,
        "cwd": "apps/jobber-auth"
      }
    },
    "test": {
      "dependsOn": ["generate-types"],
      "options": {
        "passWithNoTests": true
      }
    },
    "generate-types": {
      "command": "prisma generate",
      "options": {
        "cwd": "apps/jobber-auth"
      }
    },
    "migrate-prisma": {
      "command": "prisma migrate dev",
      "options": {
        "cwd": "apps/jobber-auth"
      }
    }
  },
  "apply-prisma-migrations": {
    "command": "prisma migrate deploy",
    "options": {
      "cwd": "apps/jobber-auth"
    }
  }
}
